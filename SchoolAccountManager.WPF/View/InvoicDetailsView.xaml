<UserControl x:Class="SchoolAccountManager.WPF.View.InvoicDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Border BorderBrush="LightGray"
            BorderThickness="1">
        <Grid d:DataContext="{d:DesignData Source=../SampleData/InvoiceDetailsViewModelSampleData.xaml}">
            <Grid.Resources>
                <Style TargetType="Label"
                       x:Key="LblLabelStyle">
                    <Setter Property="Margin"
                            Value="5,5,5,0">

                    </Setter>
                    <Setter Property="FontSize"
                            Value="14" />
                    <Setter Property="FontWeight"
                            Value="Bold"></Setter>
                </Style>
                <Style TargetType="Label"
                       x:Key="TxtBoxInputStyle">
                    <Setter Property="Margin"
                            Value="5,5,5,0"></Setter>
                    <Setter Property="FontSize"
                            Value="14" />

                </Style>
                <Style TargetType="TextBlock"
                       x:Key="TxtBlkStyle">
                    <Setter Property="Margin"
                            Value="10,5,5,0"></Setter>
                    <Setter Property="FontSize"
                            Value="14" />
                    <Setter Property="VerticalAlignment"
                            Value="Center"></Setter>

                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <Label Style="{StaticResource LblLabelStyle}"
                   Content="Name" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="1"
                   Grid.Column="0"
                   Content="Item" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="2"
                   Grid.Column="0"
                   Content="Quantity" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="3"
                   Grid.Column="0"
                   Content="Date" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="4"
                   Grid.Column="0"
                   Content="Amount" />
            <Label  Style="{StaticResource TxtBoxInputStyle}"
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="{Binding Invoice.Name}"></Label>
            <Label  Style="{StaticResource TxtBoxInputStyle}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="{Binding Invoice.Item}"></Label>
            <Label  Style="{StaticResource TxtBoxInputStyle}"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="{Binding Invoice.Quantity}"></Label>
            <TextBlock Style="{StaticResource TxtBlkStyle}"
                       Grid.Row="3"
                       Grid.Column="1"
                       Text="{Binding Invoice.DateTime, StringFormat=\{0:D\}}"></TextBlock>
            <TextBlock  Style="{StaticResource TxtBlkStyle}"
                        Grid.Row="4"
                        Grid.Column="1"
                        Text="{Binding Invoice.Amount, StringFormat=\{0:C\}, ConverterCulture=ig-NG}"></TextBlock>
            <Button Grid.Row="5"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="5"
                    Grid.Column="0"
                    MinWidth="70"
                    MinHeight="30"
                    Command="{Binding Source={StaticResource Locator}, Path=InvoiceDetailsViewModel.PrintCommand}">Print</Button>
        </Grid>

    </Border>
</UserControl>
