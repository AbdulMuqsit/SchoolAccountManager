                           Margin="5,5.5"
                           Grid.Row="4"
                           Grid.Column="1"
                           Text="{Binding Payment.Description}"
                           Height="21.28" />
                <Label Style="{StaticResource TxtBoxInputStyle}"
                       Grid.Row="5"
                       Grid.Column="1"
                       Content="{Binding Payment.Class}" />
                <Path Grid.Column="1"
                      Data="M89.813333,70 L89.813333,258.05"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="212.28"
                      Grid.Row="1"
                      Grid.RowSpan="6"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top"
                      Width="1" />
                <Path Grid.ColumnSpan="2"
                      Grid.Column="0"
                      Data="M0,70 L745.99,75"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="2"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top" />
                <Path Grid.ColumnSpan="2"
                      Grid.Column="0"
