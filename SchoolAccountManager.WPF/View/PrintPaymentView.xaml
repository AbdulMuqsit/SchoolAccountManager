<UserControl Margin="5"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             x:Class="SchoolAccountManager.WPF.View.PrintPaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             MaxHeight="270"
             MaxWidth="270">
    <Border BorderBrush="LightGray"
            BorderThickness="1"
            VerticalAlignment="Top">
        <Grid       d:DataContext="{d:DesignData /SampleData/PaymentDetailsViewModelSampleData.xaml}"
                    DataContext="{Binding Source={StaticResource Locator},Path=PaymentDetailsViewModel}">
            <Grid.Resources>
                <Style TargetType="Label"
                       x:Key="LblLabelStyle">
                    <Setter Property="Margin"
                            Value="1,1,1,0" />
                    <Setter Property="FontSize"
                            Value="10" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </Style>
                <Style TargetType="Label"
                       x:Key="TxtBoxInputStyle">
                    <Setter Property="Margin"
                            Value="1,1,1,0" />
                    <Setter Property="FontSize"
                            Value="10" />

                </Style>
                <Style TargetType="TextBlock"
                       x:Key="TxtBlkStyle">
                    <Setter Property="Margin"
                            Value="5,1,1,0"></Setter>
                    <Setter Property="FontSize"
                            Value="10" />
                    <Setter Property="VerticalAlignment"
                            Value="Center"></Setter>

                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label FontSize="13"
                   Grid.ColumnSpan="2"
                   Grid.Column="0"
                   FontWeight="Bold"
                   Style="{StaticResource TxtBoxInputStyle}"
                   Grid.Row="1"
                   Content="{Binding Payment.StudentName}"
                   Margin="0,5,0,0" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="6"
                   Grid.Column="0"
                   Content="Amount" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="2"
                   Grid.Column="0"
                   Content="Bank Name" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="3"
                   Grid.Column="0"
                   Content="Date" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="4"
                   Grid.Column="0"
                   Content="Description" />
            <Label Style="{StaticResource LblLabelStyle}"
                   Grid.Row="5"
                   Grid.Column="0"
                   Content="Class" />
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Margin="5,5,22.497,0"
                   Source="logo.png"
                   Height="50"
                   Width="50"
                   Stretch="Fill" />
            <Label FontSize="12"
                   Grid.Column="1"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Style="{StaticResource LblLabelStyle}"
                   Content="God's Wisdom International"
                   Margin="-22,-20,5,-1" />
            <Label FontSize="12"
                   Grid.Column="1"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Style="{StaticResource LblLabelStyle}"
                   Content="School"
                   Margin="-22,24,5,0" />
            <TextBlock Style="{StaticResource TxtBlkStyle}"
                   Grid.Row="6"
                   Grid.Column="1"
                   Text="{Binding Payment.Amount, StringFormat=\{0:C\}, ConverterCulture=ig-NG}" />
            <Label Style="{StaticResource TxtBoxInputStyle}"
                   Grid.Row="2"
                   Grid.Column="1"
                   Content="{Binding Payment.BankName}" />
            <TextBlock Style="{StaticResource TxtBlkStyle}"
                   Grid.Row="3"
                   Grid.Column="1"
                   Text="{Binding Payment.DateTime, StringFormat=\{0:D\}}" />
            <TextBlock TextWrapping="WrapWithOverflow"
                       FontSize="10"
                       VerticalAlignment="Center"
                       Margin="5,1"
                       Grid.Row="4"
                       Grid.Column="1"
                       Text="{Binding Payment.Description}" />
            <Label Style="{StaticResource TxtBoxInputStyle}"
                   Grid.Row="5"
                   Grid.Column="1"
                   Content="{Binding Payment.Class}" />
        </Grid>

    </Border>

</UserControl>