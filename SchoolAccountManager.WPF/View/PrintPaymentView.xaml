                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="1"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top" />
                <Path Grid.ColumnSpan="2"
                      Grid.Column="0"
                      Data="M0,70 L745.99,75"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="1"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top"

                      Grid.RowSpan="2" />
                <Path Grid.ColumnSpan="2"
                      Grid.Column="0"
                      Data="M0,70 L745.99,75"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="3"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top" />
                <Path Grid.ColumnSpan="2"
                      Grid.Column="0"
                      Data="M0,70 L745.99,75"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="4"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top" />
                <Path Grid.ColumnSpan="2" Grid.Column="0"
                      Data="M0,70 L745.99,75"
                      Fill="#FFF4F4F5"
                      HorizontalAlignment="Left"
                      Height="1"
                      Grid.Row="5"
                      Stretch="Fill"
                      Stroke="Gray"
                      VerticalAlignment="Top" />
                <Path Grid.ColumnSpan="2" Grid.Column="0"
